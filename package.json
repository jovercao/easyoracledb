{
  "name": "lubejs",
  "version": "3.0.0-preview02",
  "description": "An easy-to-use nodejs oracledb client",
  "main": "index.js",
  "bin": {
    "lube": "cli.js"
  },
  "scripts": {
    "build": "npm run clean && npm run lint && tsc && npm run pack",
    "pack": "pwsh -c cp  README.md dist/; cp README_CHS.md dist/; cp package.json dist/; cd dist; npm pack;",
    "clean": "pwsh -c if (test-path dist) { rm -r -force dist; } if (test-path doc) { rm -r -force doc; }",
    "lint": "eslint --fix ./src --ext .ts",
    "doc": "typedoc --plugin typedoc-plugin-markdown --out doc src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jovercao/lubejs.git"
  },
  "keywords": [
    "node",
    "nodejs",
    "oracle",
    "oracledb",
    "mongodb",
    "db",
    "mssql",
    "mysql",
    "database"
  ],
  "author": "jover",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jovercao/lubejs/issues"
  },
  "homepage": "https://github.com/jovercao/lubejs#readme",
  "devDependencies": {
    "@types/crypto-js": "^4.0.2",
    "@types/node": "^14.17.4",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "tsconfig-paths": "^3.10.1",
    "typedoc": "^0.17.8",
    "typedoc-plugin-markdown": "^2.3.1",
    "typescript": "^4.3.5"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "dependencies": {
    "colors": "^1.4.0",
    "commander": "^7.2.0",
    "crypto-js": "^4.1.1",
    "decimal.js-light": "^2.5.1",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.2.0",
    "uuid": "^8.3.2"
  }
}
