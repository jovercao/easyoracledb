{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "target": "ES2017",
    "declaration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": false,
    "outDir": "dist",
    "lib": [
      "ES2017"
    ],
    "paths": {
      "lubejs": ["./src"],
      "lubejs-mssql": ["./drivers/mssql"]
    }
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "test",
    "dist",
    "example"
  ]
}
