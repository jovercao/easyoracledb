{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "target": "ES2020",
    "declaration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictFunctionTypes": false,
    "sourceMap": true,
    "strict": true,
    "outDir": "dist",
    "lib": [
      "ES2017"
    ],
    "paths": {
      "lubejs-mssql/*": ["./drivers/mssql/*"],
      "lubejs/*": ["./src/*"],
      "lubejs-mssql": ["./drivers/mssql"],
      "lubejs": ["./src"],
      "orm": ["./example/orm-decorator"]
    }
  },
  "include": [
    "./example/.lubejs.ts",
    "./src/**/*.ts",
    "./example/**/*.ts",
    "./drivers/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "dist"
  ]
}
